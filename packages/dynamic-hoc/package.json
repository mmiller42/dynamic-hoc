{
  "name": "dynamic-hoc",
  "version": "0.0.0",
  "description": "A utility that wraps a React HOC factory and produces a HOC with an API to mutate the factory's arguments.",
  "main": "cjs/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/mmiller42/dynamic-hoc.git",
  "author": "mmiller42 <me@mmiller.me>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:cjs && yarn build:format",
    "build:cjs": "rimraf cjs && babel 'lib/**/*.js' --out-dir cjs",
    "build:format": "prettier --write '*.{js,json}' '{cjs,lib}/**/*.{js,ts}'",
    "test": "yarn test:format && WITH_CJS=true yarn test:coverage",
    "test:coverage": "nyc yarn test:unit",
    "test:format": "prettier --check '*.js' '{cjs,lib}/**/*.js'",
    "test:unit": "ava"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "react": ">=16.8.0",
    "react-test-renderer": "^16.12.0"
  }
}
