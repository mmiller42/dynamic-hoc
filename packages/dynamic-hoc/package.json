{
  "name": "dynamic-hoc",
  "version": "1.0.0",
  "description": "A utility that wraps a React HOC and produces a HOC with additional methods to swap out the given HOC at runtime.",
  "keywords": [
    "hoc",
    "react",
    "react-redux",
    "redux",
    "testing"
  ],
  "main": "cjs/index.js",
  "module": "lib/index.js",
  "files": [
    "/cjs",
    "/lib"
  ],
  "repository": "https://github.com/mmiller42/dynamic-hoc.git",
  "homepage": "https://github.com/mmiller42/dynamic-hoc/tree/master/packages/dynamic-hoc",
  "author": "mmiller42 <me@mmiller.me>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf cjs && babel 'lib/**/*.js' --out-dir cjs && yarn format-cjs",
    "coverage-report": "open coverage/lcov-report/index.html",
    "format-cjs": "prettier --write 'cjs/**/*.js' && prettier --write 'cjs/**/*.js'",
    "format-source": "prettier --write '*.{js,json}' 'lib/**/*.js'",
    "ci": "yarn build && yarn test",
    "test": "yarn test:format && yarn test:coverage && yarn test:unit-cjs",
    "test:coverage": "nyc yarn test:unit-source",
    "test:format": "prettier --check '*.{js,json}' '{cjs,lib}/**/*.js'",
    "test:unit-source": "ava",
    "test:unit-cjs": "CJS=true ava"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "ava": "^3.0.0",
    "esm": "^3.2.25",
    "nyc": "^15.0.0",
    "open": "^7.0.0",
    "prettier": "^1.19.1",
    "react": ">=16.8.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "sinon": "^8.1.0"
  }
}
